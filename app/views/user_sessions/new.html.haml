%h2
  login
- form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  = f.label :login
  = f.text_field :login
  = f.label :password
  = f.password_field :password
  %br
  = f.label :remember_me, "Remember me", :class => 'inline'
  = f.check_box :remember_me
  %br
  = f.submit "Log in"
= form_tag password_resets_path
= label_tag 'email', 'Enter your email to receive instructions on how to set your password'
= text_field_tag 'email'
= submit_tag 'Send email'
</form>
