- unless mindapple.suggestion.blank?
  %li.mindapple
    = image_tag mindapple.person.avatar.url :thumb

    %div
      %p.number= "##{mindapple.id}"
      %p.apple= h mindapple.suggestion
      %p.when
        = "Posted #{time_ago_in_words mindapple.created_at} ago by"
        %span
          = person_link(mindapple)

      .social{ :id => "like_section_#{mindapple.id}" }
        = render :partial => 'pages/like_links', :locals => {:mindapple => mindapple}
