.clear.brain-dump
  = form.label :braindump, "Brain dump. <span class='description'>Anything else you'd like to tell us? What else do you need to stay mentally healthy?</span>"
  = form.text_area :braindump
.col-odd.radio-input
  = form.label :health_check, "Health check. <span class='description'>How would you rate your mental health? (1 is bad, 5 good)</span>"
  = form.text_field :health_check
.col-even.radio-input
  = form.label :gender, "Venus and Mars. <span class='description'>What's your gender?</span>"
  = form.label "gender_f", "Female", :class => 'label-radio'
  = form.radio_button(:gender, "f")
  = form.label "gender_m", "Male", :class => 'label-radio'
  = form.radio_button(:gender, "m")
  = form.label "gender_c", "It's complicated", :class => 'label-radio'
  = form.radio_button(:gender, "c")
.col-odd
  = form.label :age, "Age check. <span class='description'>How old are you?"
  = form.select :age, [["(This helps us compare different generations...)", ""], "Under 16", "16-24", "25-34", "35-44", "45-54", "55-64", "65 or over"]
.col-even
  = form.label :location, "Passport control. <span class='description'>Where are you from?</span>"
  = form.text_field :location
.col-odd
  = form.label :occupation, "Your thing. <span class='description'>What's your main occupation, paid or otherwise?</span>"
  = form.text_field :occupation
.col-even
  = form.label :name, "Be proud. <span class='description'>What's your name? (very optional)</span>"
  = form.text_field :name
%hr.clear
.col-odd
  = form.label :email, "Don't go! <span class='description'>Leave your e-mail and we'll send you nice messages. (Never made public.)</span>"
  = form.text_field :email
- unless form.object.login_set_by_user?
  .col-even
    = form.label :login, "Identity card. <span class='description'>Choose a username to create your account on mindapples.org.</span>"
    = form.text_field :login
.col-odd
  = form.label :password, "Come back! <span class='description'>Enter a password to edit your answers later.</span>"
  = form.password_field :password
.col-even
  = form.label :password_confirmation, "<span class='description'>One more time with the password, to avoid typos.</span>"
  = form.password_field :password_confirmation
%hr.clear
