.row_even.extra_details
  .arrow_lead_in
  .col_full.brain_dump
    = form.label :braindump, "Brain dump. <span class='description'>Anything else you'd like to tell us? What else do you need to look after your mind?</span>"
    = form.text_area :braindump
  .col_odd
    = form.label :gender, "Venus and Mars. <span class='description'>What's your gender?</span>"
    .form_input
      = form.radio_button(:gender, "f")
      = form.label "gender_f", "Female", :class => 'label-radio'
      = form.radio_button(:gender, "m")
      = form.label "gender_m", "Male", :class => 'label-radio'
      = form.radio_button(:gender, "c")
      = form.label "gender_c", "It's complicated", :class => 'label-radio'
  .col_even
    = form.label :age, "Age check. <span class='description'>How old are you?</span>"
    .form_input
      = form.select :age, [["(This helps us compare generations...)", ""], "Under 16", "16-24", "25-34", "35-44", "45-54", "55-64", "65 or over"]
  .col_odd
    = form.label :occupation, "Your thing. <span class='description'>What's your occupation, paid or not?</span>"
    = form.text_field :occupation
  .col_even
    = form.label :location, "Passport control. <span class='description'>Which country are you from?</span>"
    = form.text_field :location
  .col_full.health_check
    = form.label :health_check, "Health check. <span class='description'>How would you rate your mental health? </span><span class='description_highlight'>(1 is bad, 5 good)</span>"
    .form_input
      = form.label "health_check_1", "1 (Hmmm)", :class => 'label-radio'
      = form.radio_button("health_check", "1", :class => 'label-radio')
      = form.radio_button("health_check", "2", :class => 'label-radio')
      = form.radio_button("health_check", "3", :class => 'label-radio')
      = form.radio_button("health_check", "4", :class => 'label-radio')
      = form.radio_button("health_check", "5", :class => 'label-radio')
      = form.label "health_check_5", "5 (Ommm)", :class => 'label-radio'
  .col_odd
    = form.label :email, "E-mail us! <span class='description'>Leave your e-mail and we'll post you your mindapples. </span><span class='description_highlight'>(never made public)</span>"
    = form.text_field :email
  .col_even
    = form.label :name, "Be proud. <span class='description'>What's your name? </span><br/><span class='description_highlight'>(very optional)</span>"
    = form.text_field :name
  %br.clear

.row_odd.account_details
  .arrow_lead_in
  -if form.object.login_set_by_user?
    .col_odd.hide
      = form.text_field :login
  -else
    .col_odd
      = form.label :login, "Join us. <span class='description'>Choose a username.</span>"
      = form.text_field :login
  .col_even
    = form.label :password, "Smile please. <span class='description'>Choose a profile picture.</span>"
    = form.file_field :avatar
    - if resource.avatar.exists?
      = image_tag resource.avatar.url(:medium)
      %input{:type=>"checkbox", :name=>"delete_avatar", :value=>1, :checked=>false} Remove this picture.
  .col_odd
    %input{:type=>"hidden", :name=>"pid", :value=>resource.id}
    = form.label :password, "Don't go! <span class='description'>Pick a password to edit your page.</span>"
    -if form.object.login_set_by_user?
      = form.password_field :password
    -else
      = form.password_field :password, :value=>''
  .col_even
    = form.label :password_confirmation, "<span class='description'>And again with the password please.</span>"
    -if form.object.login_set_by_user?
      = form.password_field :password_confirmation
    -else
      = form.password_field :password_confirmation, :value=>''
  .col_odd
    = form.label :public_profile, "Show yourself. <span class='description'>Can other people see your profile?</span>"
    .form_input
      = form.radio_button(:public_profile, true)
      = form.label "public_profile_true", "I'm happy to make my identity public.", :class => 'label-radio label-radio-person_public_profile'
      %br
      = form.radio_button(:public_profile, false)
      = form.label "public_profile_false", "No, I want to stay anonymous please", :class => 'label-radio label-radio-person_public_profile'
  .col_even.policy_check
    .form_input
      = form.check_box(:policy_checked, :class => 'policy_checkbox')
      = form.label :policy_checked, "Yes yes, of course I accept the <a href=\"/terms\" title=\"Terms of Service\" target=\"_blank\">Terms & Conditions</a>",:class => 'label-checkbox'
  %br.clear