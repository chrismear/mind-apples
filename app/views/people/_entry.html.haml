.clear.brain-dump
  = form.label :braindump, "Brain dump. <span class='description'>Anything else you'd like to tell us? What else do you need to stay mentally healthy?</span>"
  = form.text_area :braindump
.col-odd.radio-input
  = form.label :gender, "Venus and Mars. <span class='description'>What's your gender?</span>"
  = form.label "gender_f", "Female", :class => 'label-radio'
  = form.radio_button(:gender, "f")
  = form.label "gender_m", "Male", :class => 'label-radio'
  = form.radio_button(:gender, "m")
  = form.label "gender_c", "It's complicated", :class => 'label-radio'
  = form.radio_button(:gender, "c")
.col-even
  = form.label :age, "Age check. <span class='description'>How old are you?</span>"
  = form.select :age, [["(This helps us compare different generations...)", ""], "Under 16", "16-24", "25-34", "35-44", "45-54", "55-64", "65 or over"]
.col-odd
  = form.label :occupation, "Your thing. <span class='description'>What's your occupation, paid or not?</span>"
  = form.text_field :occupation
.col-even
  = form.label :location, "Passport control. <span class='description'>Where do you live?</span>"
  = form.text_field :location
.col-odd.radio-input
  = form.label :health_check, "Health check. <span class='description'>How would you rate your mental health? (1 is bad, 5 good)</span>"
  = form.text_field :health_check
.col-even
  = form.label :name, "Be proud. <span class='description'>What's your name? (very optional)</span>"
  = form.text_field :name
%hr.clear
.col-odd
  = form.label :email, "Don't go! <span class='description'>Leave your e-mail and we'll send you occasional messages. (never made public)</span>"
  = form.text_field :email
.col-even
  = form.label :password, "Come back. <span class='description'>Enter a password to edit your mindapples page later.</span>"
  = form.password_field :password
- unless form.object.login_set_by_user?
  .col-odd
    = form.label :login, "Join us. <span class='description'>Choose a username to claim your page.</span>"
    = form.text_field :login
.col-even
  = form.label :password_confirmation, "<span class='description'>Password once more please, in case of typos...</span>"
  = form.password_field :password_confirmation
%hr.clear
