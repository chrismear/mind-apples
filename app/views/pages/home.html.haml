.right_column_wide
  - if current_user.nil?
    =# render(:partial => '/pages/what_section')
    .five-a-day
      .inner-top
        %h1 What are your mindapples?
        %p What 5 things do you do every day, or regularly, to look after your mind...

        = render(:partial => '/people/mindapples_form', :locals => { :resource => @person })
        %div.clear
  -else
    = render(:partial => 'shared/small_search')
  
  .promotion
    = link_to image_tag('/images/content/bigtreat.gif', :title => "The Big Treat"), "/thebigtreat"

.main_content
  %dl.mindapples_definition
    %dt 
      mindapple
      %span.phonetics (mīnd-ăp-´əl)
      &bull;
      %span.type n.
    %dd
      a simple day-to-day activity that is good for the mind
      
   

  .promotional_video
    %iframe{:title => "Mindapples in Brixton", :width => "519", :height => "322", :src => "http://www.youtube.com/embed/7x8gXSCA4Ww", :frameborder => "0", :allowfullscreen => ""}

  = render :partial => 'blog_feeds/index'

  .most_recent
    %h2
      %span Most recent

    %ul
      = render :partial => 'mindapples/mindapple', :collection => @most_recent

  .top_apples
    %h2
      %span Top &lsquo;apples

    %ul
      = render :partial => 'mindapples/mindapple', :collection => @most_liked
