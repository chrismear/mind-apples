<h1>Listing blogfeeds</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Content</th>
    <th>Teaser</th>
    <th>Published</th>
    <th>Url</th>
  </tr>

<% @blogfeeds.each do |blogfeed| %>
  <tr>
    <td><%=h blogfeed.author %></td>
    <td><%=h blogfeed.title %></td>
    <td><%=h blogfeed.content %></td>
    <td><%=h blogfeed.teaser %></td>
    <td><%=h blogfeed.published %></td>
    <td><%=h blogfeed.url %></td>
    <td><%= link_to 'Show', blogfeed %></td>
    <td><%= link_to 'Edit', edit_blogfeed_path(blogfeed) %></td>
    <td><%= link_to 'Destroy', blogfeed, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New blogfeed', new_blogfeed_path %>