.login_controls
  .background
  .foreground
    - if current_user
      - if current_person
        = link_to('Me', person_path(current_person), :class => 'simple_button_1')
      = link_to('Log out', logout_path, :class => 'simple_button_2')
    - else
      = link_to('Login', login_path, :class => 'simple_button_1')
      = link_to('Sign up', new_person_path, :class => 'simple_button_2')
