- form_for @user_session, :url => user_session_path do |f|
  = error_messages(f.error_messages)
  = f.label :login
  = f.text_field :login
  = f.label :password
  = f.password_field :password
  %br
  .form_input
    = f.check_box :remember_me
    = f.label :remember_me, "Remember me"
  - if @network
    = hidden_field_tag 'network_id', @network.id
  = image_submit_tag '/images/buttons/go.png', :class => "submit-form", :alt => "Log in"
%br.clear
</form>
